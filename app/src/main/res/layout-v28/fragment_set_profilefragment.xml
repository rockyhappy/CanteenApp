<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="10dp"
    tools:context=".set_profilefragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:borderWidth="0dp"
        app:fabCustomSize="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileb"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:paddingTop="8dp"
        android:text="@string/profileb"
        android:gravity="center"
        android:textColor="@color/cardview_dark_background"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/your_name"
        style="@style/NoUnderline"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_border"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="text"
        android:paddingStart="15dp"
        android:text="@string/your_name"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/your_email"
        style="@style/NoUnderline"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="328dp"
        android:ems="10"
        android:background="@drawable/rounded_border"
        android:fontFamily="@font/roboto"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:text="@string/your_email"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/your_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/your_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />


    <TextView

        android:id="@+id/this_can_t_be_edited_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto"
        android:text="@string/this_can_t_be_edited_later"
        android:textColor="@color/primary_color"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/date_of_birth"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="@+id/date_of_birth"
        app:layout_constraintTop_toBottomOf="@+id/date_of_birth"
        tools:ignore="SmallSp" />

    <EditText
        android:id="@+id/contact_number"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/rounded_border"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="phone"
        android:paddingStart="15dp"
        android:text="@string/contact_number"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/your_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/your_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/date_of_birth"
        style="@style/NoUnderline"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="388dp"
        android:background="@drawable/rounded_border"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="date"
        android:paddingStart="15dp"
        android:text="@string/date_of_birth"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/your_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/your_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />



    <EditText
        android:id="@+id/gender"
        style="@style/NoUnderline"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_border"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="text"
        android:paddingStart="15dp"
        android:text="@string/gender"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/your_anniversary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/your_anniversary"
        app:layout_constraintTop_toBottomOf="@+id/your_anniversary"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/your_anniversary"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="date"
        android:paddingStart="15dp"
        android:text="@string/your_anniversary"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:background="@drawable/rounded_border"
        app:layout_constraintEnd_toEndOf="@+id/date_of_birth"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/date_of_birth"
        app:layout_constraintTop_toBottomOf="@+id/date_of_birth"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/annp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto"
        android:text="@string/annp"
        android:textColor="@color/primary_color"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/your_anniversary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/your_anniversary"
        app:layout_constraintTop_toBottomOf="@+id/your_anniversary"
        tools:ignore="SmallSp" />


</com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>