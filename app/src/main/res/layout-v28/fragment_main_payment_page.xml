<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_orange3"
    tools:context=".main_paymentPage">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:borderWidth="0dp"
        app:fabCustomSize="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_heading"
        android:id="@+id/payment_heading"
        android:background="@color/white3"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
       android:paddingVertical="16dp"
        android:textSize="32sp"
        android:textFontWeight="500"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/roboto"
        android:paddingVertical="16dp"
        android:text="@string/payment_method"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView13"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="240dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/gpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/rounded_border"
                android:src="@drawable/google_pay"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="40dp"
                android:paddingVertical="8dp"
                android:text="@string/gpay"
                android:textColor="@color/semiblack"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/next_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/paytm_upi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="108dp"
                android:background="@drawable/rounded_border"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="40dp"
                android:paddingVertical="8dp"
                android:text="@string/paytm_upi"
                android:textColor="@color/semiblack"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/next_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.906"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/credit_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/rounded_border"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="40dp"
                android:paddingVertical="8dp"
                android:text="@string/credit_card"
                android:textColor="@color/semiblack"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/next_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/debit_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="216dp"
                android:background="@drawable/rounded_border"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="40dp"
                android:paddingVertical="8dp"
                android:text="@string/debit_card"
                android:textColor="@color/semiblack"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/next_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/cash_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="272dp"
                android:background="@drawable/rounded_border"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="40dp"
                android:paddingVertical="8dp"
                android:text="@string/cash_payment"
                android:textColor="@color/semiblack"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/next_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.156"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="26dp"
                android:layout_height="28dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/google_pay"
                app:layout_constraintBottom_toBottomOf="@+id/gpay"
                app:layout_constraintEnd_toEndOf="@+id/gpay"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/gpay" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:src="@drawable/paytm"
                app:layout_constraintBottom_toBottomOf="@+id/paytm_upi"
                app:layout_constraintEnd_toEndOf="@+id/paytm_upi"
                app:layout_constraintHorizontal_bias="0.026"
                app:layout_constraintStart_toStartOf="@+id/paytm_upi"
                app:layout_constraintTop_toTopOf="@+id/paytm_upi"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:src="@drawable/credit_card"
                app:layout_constraintBottom_toBottomOf="@+id/credit_card"
                app:layout_constraintEnd_toEndOf="@+id/credit_card"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/credit_card"
                app:layout_constraintTop_toTopOf="@+id/credit_card"
                app:layout_constraintVertical_bias="0.523" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="40dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/debit_card"
                app:layout_constraintEnd_toEndOf="@+id/credit_card"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/debit_card"
                app:layout_constraintTop_toTopOf="@+id/debit_card"
                tools:src="@drawable/debit_cardpay" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="40dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/cash_payment"
                app:layout_constraintEnd_toEndOf="@+id/cash_payment"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/cash_payment"
                app:layout_constraintTop_toTopOf="@+id/cash_payment"
                tools:src="@drawable/offlinepayment" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/confirm_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="636dp"
        android:background="@drawable/button_layout"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:text="@string/confirm_order"
        android:textAllCaps="false"
        android:textColor="@color/semiblack"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/cardView13"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="636dp"
        android:background="@drawable/button_layout"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:text="@string/cancel_order"
        android:textAllCaps="false"
        android:textColor="@color/semiblack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cardView13"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/confirm_order"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>