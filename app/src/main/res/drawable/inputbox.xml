<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Green outline shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary_color" /> <!-- Specify your desired green color -->
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!-- Content shape -->
            <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Green outline shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/grey" /> <!-- Specify your desired green color -->
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!-- Content shape -->
            <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
