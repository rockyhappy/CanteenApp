        <com.google.android.material.slider.Slider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="20"
            android:valueFrom="0"
            android:valueTo="500"
            android:stepSize="1"
            app:trackColor="@color/primary_color"
