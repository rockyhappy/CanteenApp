<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.Registrationfragment">

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/roboto"
        android:text="@string/reg"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/roboto"
        android:text="@string/create"
        android:textColor="#787878"
        android:textFontWeight="500"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="210dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rectangle1"
        app:hintEnabled="false"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:startIconTint="@color/grey"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            style="@style/NoUnderline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Full Name"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/roboto"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="290dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rectangle1"
        app:hintEnabled="false"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/baseline_mail_24"
        app:startIconTint="@color/grey"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email2"
            style="@style/NoUnderline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="User@gmail.com"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/roboto"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="370dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rectangle1"
        app:endIconMode="password_toggle"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@drawable/ic_password_toggle"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@color/grey"
        app:endIconDrawable="@drawable/custom_password_toggle"
        android:fontFamily="@font/roboto"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passkey"
            style="@style/NoUnderline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/roboto"/>


    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="583dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rectangle1"
        app:endIconMode="password_toggle"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@drawable/ic_password_toggle"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@color/grey"
        app:endIconDrawable="@drawable/custom_password_toggle"
        android:fontFamily="@font/roboto"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passkey2"
            style="@style/NoUnderline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/roboto"/>


    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="474dp"
        android:backgroundTint="#FA902D"
        android:text="@string/button"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:background="@drawable/rounded_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/option"
        android:layout_width="175dp"
        android:layout_height="24dp"
        android:layout_marginTop="644dp"
        android:fontFamily="@font/roboto"
        android:text="@string/option"
        android:textColor="@color/grey"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option2"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:layout_marginTop="687dp"
        android:textColor="@color/grey"
        android:fontFamily="@font/roboto"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:gravity="center"
        android:text="@string/option2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/media"
        android:layout_width="116dp"
        android:layout_height="32dp"
        android:layout_marginTop="583dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/media" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="321dp"
        android:layout_height="21dp"
        android:layout_marginTop="548dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/optiona" />


</androidx.constraintlayout.widget.ConstraintLayout>